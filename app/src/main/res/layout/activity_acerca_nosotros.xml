<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acerca_nosotros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context="com.oop.dubanrosero.quickmindproject.AcercaNosotros">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:layout_marginBottom="10dp">

        <ImageView
            android:src="@drawable/help"
            android:layout_height="wrap_content"
            android:id="@+id/helpabout"
            android:layout_weight="1"
            android:layout_width="wrap_content" />

        <TextView
            android:text="@string/Aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aboutwindow"
            android:layout_alignParentTop="true"
            android:layout_marginTop="39dp"
            android:layout_weight="3.02"
            android:textSize="45sp"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:text="@string/Textabout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textabout"
            android:layout_below="@+id/aboutwindow"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5">

        <ImageView
            android:src="@drawable/logofinal"
            android:id="@+id/logo"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="261dp" />

        <ImageView
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:id="@+id/backabout"
            android:layout_gravity="bottom" />

    </LinearLayout>


</LinearLayout>


